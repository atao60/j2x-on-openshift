#!/bin/bash

set -x

export LOG=$OPENSHIFT_LOG_DIR/out.log

export M2=$OPENSHIFT_DATA_DIR/apache-maven/bin
export JAVA_HOME=$OPENSHIFT_DATA_DIR/java
export PATH=$JAVA_HOME/bin:$M2:$PATH

cd $OPENSHIFT_REPO_DIR
mvn -e -Dmaven.repo.local=$OPENSHIFT_DATA_DIR/.m2/repository clean package -Pstandalone  > $LOG 2>&1 &
